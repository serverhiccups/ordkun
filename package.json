  "bugs": {
    "url": "https://github.com/serverhiccups/ordkun/issues"
  },
  "homepage": "https://github.com/serverhiccups/ordkun#readme",
  "devDependencies": {
    "@parcel/transformer-image": "^2.0.0-rc.0",
    "@parcel/transformer-sass": "^2.0.0-rc.0",
    "parcel": "^2.0.0-rc.0",
    "webextension-polyfill": "^0.8.0"
  },
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
